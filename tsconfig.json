{
  "compilerOptions": {
    // "allowJs": true,
    "sourceMap": true,
    "target": "es5",
    "jsx": "react",
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    /*"declaration": true,
    "declarationDir": "./dist/",*/
    "noImplicitAny": true,
    "noImplicitReturns": false,
    "removeComments": true,
    "strictNullChecks": false,
    "outDir": "dist",
    "baseUrl": ".",
    "rootDir": ".",
    "lib": [
      "es6",
      "es7",
      "dom"
    ],
    "paths": {
      "Main": [
        "./src/main"
      ],
      "Store": [
        "./src/store/store"
      ],
      "Components": [
        "./src/components/index"
      ],
      "Services": [
        "./src/services/index"
      ],
      "Reducers": [
        "./src/reducers/index"
      ],
      "Actions": [
        "./src/actions/index"
      ],
      "Types": [
        "./types/index"
      ],
      "Containers": [
        "./src/containers/index"
      ],
      "Constants": [
        "./src/constants"
      ],
      "HOC": [
        "./src/HOC/index"
      ],
      "CardModules": [
        "./src/components/cardDetailComponents/cardModules/index"
      ],
      "Theme": [
        "./src/scss/theme/index"
      ],
      "Vimeo": [
        "./src/services/vimeo-player"
      ]
    }
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "dist",
    "build",
    "node_modules",
  ],
  "awesomeTypescriptLoaderOptions": {
    "useBabel": true
  }
}