{
  "compilerOptions": {
    "sourceMap": true,
    "target": "es5",
    "jsx": "react",
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": false,
    "noImplicitAny": false,
    "noImplicitReturns": false,
    "removeComments": true,
    "strictNullChecks": false,
    "outDir": "build",
    "lib": [
      "es6",
      "es7",
      "dom"
    ],
    "paths": {
      "Components": [
        "./src/app/components/index"
      ],
      "Services": [
        "./src/app/services/index"
      ],
      "Reducers": [
        "./src/app/reducers/index"
      ],
      "Actions": [
        "./src/app/actions/index"
      ],
      "Types": [
        "./src/app/types/index"
      ],
      "Containers": [
        "./src/app/containers/index"
      ],
      "Constants": [
        "./src/app/constants"
      ],
      "HOC": [
        "./src/app/HOC/index"
      ],
      "CardModules": [
        "./src/app/components/cardDetail/cardModules/index"
      ]
    }
  },
  "exclude": [
    "dist",
    "build",
    "node_modules",
    "types"
  ],
  "include": [
    "./src/**/*"
  ]
}