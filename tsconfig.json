{
  "compilerOptions": {
    "sourceMap": true,
    "target": "es5",
    "jsx": "react",
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": false,
    "noImplicitAny": true,
    "noImplicitReturns": false,
    "removeComments": true,
    "strictNullChecks": false,
    "outDir": "dist",
    "baseUrl": ".",
    "rootDir": ".",
    "lib": [
      "es6",
      "es7",
      "dom"
    ],
    "paths": {
      "Components": [
        "./src/components/index"
      ],
      "Services": [
        "./src/services/index"
      ],
      "Reducers": [
        "./src/reducers/index"
      ],
      "Actions": [
        "./src/actions/index"
      ],
      "Types": [
        "./types/index"
      ],
      "Containers": [
        "./src/containers/index"
      ],
      "Constants": [
        "./src/constants"
      ],
      "HOC": [
        "./src/HOC/index"
      ],
      "CardModules": [
        "./src/components/cardDetail/cardModules/index"
      ],
      "Theme": ["./src/scss/theme/index"]
    }
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "dist",
    "build",
    "node_modules"
  ],
  "awesomeTypescriptLoaderOptions": {
    "useBabel": true,
    "babelOptions": {
      // "plugins": ["transform-runtime"],
      "presets": [
        [
          "es2015",
          {
            // "modules": false
          }
        ]
      ],
      "sourceMaps": true
    }
  }
}
