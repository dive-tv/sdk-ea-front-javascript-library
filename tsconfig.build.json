// DIVE TEAM: DON'T FORGET TO EDIT tsconfig.json too
// The only difference is "./src/**/*.spec.tsx", in exclude
{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "strictNullChecks": true,
    "baseUrl": ".",
    "rootDir": "./src/",
    "noImplicitAny": true,
    "sourceMap": true,
    "outDir": "./dist/",
    /*"declaration": true,
      "declarationDir": "./dist/",*/
    "lib": [
      "dom",
      "es2015.promise",
      "es5",
      "es6"
    ]
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules",
    "./src/**/*.spec.tsx",
    "dist"
  ]
}